<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <link rel="apple-touch-icon" sizes="76x76" href="../assets/img/apple-icon.png">
  <link rel="icon" type="image/png" href="../assets/img/favicon.png">
  <title>
    FoodGuard PRO 
  </title>
  <!--     Fonts and icons     -->
  <link href="https://fonts.googleapis.com/css?family=Inter:300,400,500,600,700,800" rel="stylesheet" />
  <!-- Nucleo Icons -->
  <link href="https://demos.creative-tim.com/soft-ui-dashboard/assets/css/nucleo-icons.css" rel="stylesheet" />
  <link href="https://demos.creative-tim.com/soft-ui-dashboard/assets/css/nucleo-svg.css" rel="stylesheet" />
  <!-- Font Awesome Icons -->
  <script src="https://kit.fontawesome.com/42d5adcbca.js" crossorigin="anonymous"></script>
  <!-- CSS Files -->
  <link id="pagestyle" href="../../assets/css/soft-ui-dashboard.css?v=1.1.0" rel="stylesheet" />
  <!-- Nepcha Analytics (nepcha.com) -->

</head>

<body class="g-sidenav-show  bg-gray-100">
  <aside class="sidenav navbar navbar-vertical navbar-expand-xs border-0 border-radius-xl my-3 fixed-start ms-3 " id="sidenav-main">
    <%- include('../partials/sidehead') %>
    <hr class="horizontal dark mt-0">
    <%- include('../partials/sidebar') %>
  </aside>
  <main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg ">
    <!-- Navbar -->
    <%- include('../partials/navbar') %>
    <!-- End Navbar -->
    <div class="container-fluid py-4">
      <div class="row">
        <div class="col-lg-12 col-12">
          <div class="row">
            
            <div class="col-12 mb-lg-0 mb-4">
                <div class="card">
                  <div class="card-body p-4">
                    <form id="sppgFormUpdate" enctype="multipart/form-data" action="/sppg/update/<%= sppg.id_sppg %>" method="POST">
                      <div class="row">
                        <!-- Bagian Kiri -->
                        <div class="col-lg-7">
                          <div class="d-flex flex-column h-100">
              
                            <div class="row">
                              <div class="col-md-6 mb-3">
                                <label for="id_sppg" class="form-label">ID SPPG</label>
                                <input type="text" class="form-control" id="id_sppg" name="id_sppg" value="<%= sppg.id_sppg %>" required readonly>
                              </div>
                              <div class="col-md-6 mb-3">
                                <label for="nama_sppg" class="form-label">Nama SPPG</label>
                                <input type="text" class="form-control" id="nama_sppg" name="nama_sppg" value="<%= sppg.nama_sppg %>" required>
                              </div>
                            </div>
              
                            <div class="row">
                              <div class="col-md-6 mb-3">
                                <label for="kota_sppg" class="form-label">Kota</label>
                                <input type="text" class="form-control" id="kota_sppg" name="kota_sppg" value="<%= sppg.kota_sppg %>" required>
                              </div>
                              <div class="col-md-6 mb-3">
                                <label for="provinsi_sppg" class="form-label">Provinsi</label>
                                <input type="text" class="form-control" id="provinsi_sppg" name="provinsi_sppg" value="<%= sppg.provinsi_sppg %>" required>
                              </div>
                            </div>
              
                            <div class="mb-3">
                              <label for="alamat_sppg" class="form-label">Alamat</label>
                              <textarea class="form-control" id="alamat_sppg" name="alamat_sppg" rows="3" required><%= sppg.alamat_sppg %></textarea>
                            </div>
              
                            <div class="mb-3">
                              <label for="no_telp_sppg" class="form-label">No. Telepon</label>
                              <input type="text" class="form-control" id="no_telpon_sppg" name="no_telp_sppg" value="<%= sppg.no_telp_sppg %>" required>
                            </div>
              
                            <div class="mb-3">
                              <label for="jumlah_sekolah" class="form-label">Jumlah Sekolah</label>
                              <input type="number" class="form-control" id="jumlah_sekolah" name="jumlah_sekolah" value="<%= jumlah_sekolah %>" readonly>
                            </div>
              
                            <div class="mb-3">
                              <label for="status_sppg" class="form-label">Status SPPG</label>
                              <select class="form-select" id="status_sppg" name="status_sppg" required>
                                <option value="aktif" <%= sppg.status_sppg === 'aktif' ? 'selected' : '' %>>Aktif</option>
                                <option value="nonaktif" <%= sppg.status_sppg === 'nonaktif' ? 'selected' : '' %>>Nonaktif</option>
                              </select>
                            </div>
              
                          </div>
                        </div>
              
                        <!-- Bagian Kanan: Upload Foto -->
                        <div class="col-lg-5 ms-auto text-center mt-5 mt-lg-0">
                          <div class="upload-area" style="position: relative; cursor: pointer;">
                            <img id="preview" 
                                 src="<%= sppg.foto_sppg ? sppg.foto_sppg : '' %>" 
                                 alt="Update Foto SPPG" 
                                 class="img-fluid rounded mb-3 <%= sppg.foto_sppg ? '' : 'btn border border-secondary d-flex justify-content-center align-items-center' %>" 
                                 style="max-height: 200px; object-fit: cover; min-height: 200px;">
              
                            <input type="file" id="foto-upload" name="foto" accept="image/*" hidden>
                            <input type="hidden" name="foto_lama" value="<%= sppg.foto_sppg %>">
                          </div>
                          <span class="text-xs text-muted">*Klik foto untuk mengganti foto</span>
                        </div>
              
                      </div>
              
                      <div class="row mt-4">
                        <div class="col-12">
                          <button type="submit" class="btn btn-success w-100">Simpan Perubahan SPPG</button>
                        </div>
                      </div>
                    </form>
                  </div>
                </div>
              </div>
          
      <footer class="sticky-bottom footer pt-3  ">
        <div class="container-fluid">
          <div class="row align-items-center justify-content-lg-between">
            <div class="col-lg-6 mb-lg-0 mb-4">
              <div class="copyright text-center text-sm text-muted text-lg-start">
                Â© <script>
                  document.write(new Date().getFullYear())
                </script>,
                Irostech
              </div>
            </div>
          </div>
        </div>
      </footer>

    </div>
  </main>

  <!--   Core JS Files   -->
  <script src="../assets/js/core/popper.min.js"></script>
  <script src="../assets/js/core/bootstrap.min.js"></script>
  <script src="../assets/js/plugins/perfect-scrollbar.min.js"></script>
  <script src="../assets/js/plugins/smooth-scrollbar.min.js"></script>
  <script src="../assets/js/plugins/chartjs.min.js"></script>

  <script>
    const fileInput = document.getElementById('foto-upload');
    const preview = document.getElementById('preview');
  
    if (!preview.src || preview.src.trim() === '') {
      preview.style.background = '#f0f0f0';
      preview.style.display = 'flex';
      preview.style.justifyContent = 'center';
      preview.style.alignItems = 'center';
      preview.innerText = 'Klik untuk upload foto';
    }
  
    preview.addEventListener('click', () => fileInput.click());
  
    fileInput.addEventListener('change', function(event) {
      const file = event.target.files[0];
      if (file) {
        const reader = new FileReader();
        reader.onload = function(e) {
          preview.src = e.target.result;
          preview.style.background = 'none';
          preview.innerText = '';
        };
        reader.readAsDataURL(file);
      }
    });
  </script>
  
  
  <script>
    var win = navigator.platform.indexOf('Win') > -1;
    if (win && document.querySelector('#sidenav-scrollbar')) {
      var options = {
        damping: '0.5'
      }
      Scrollbar.init(document.querySelector('#sidenav-scrollbar'), options);
    }
  </script>
  <!-- Github buttons -->
  <script async defer src="https://buttons.github.io/buttons.js"></script>
  <!-- Control Center for Soft Dashboard: parallax effects, scripts for the example pages etc -->
  <script src="../assets/js/soft-ui-dashboard.min.js?v=1.1.0"></script>
</body>

</html>