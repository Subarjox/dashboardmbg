<body class="g-sidenav-show  bg-gray-100">
  <aside class="sidenav navbar navbar-vertical navbar-expand-xs border-0 border-radius-xl my-3 fixed-start ms-3 " id="sidenav-main">
    <%- include('../partials/sidehead') %>
    <hr class="horizontal dark mt-0">
    <%- include('../partials/sidebar') %>

  </aside>
  <main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg ">
    <!-- Navbar -->
    <%- include('../partials/navbar') %>
    <!-- End Navbar -->

    <div class="container-fluid py-4">
      <div class="row">
        <div class="col-lg-12 col-12">
          <div class="row">
            
            <div class="col-12 mb-lg-0 mb-4">
              <div class="card">
                <div class="card-body p-4">
                  <form id="sekolahForm" enctype="multipart/form-data" action="/sekolah/tambah" method="POST">
                    <div class="row">
                      <div class="col-lg-7">
                        <div class="d-flex flex-column h-100">
            
                          <div class="row">
                            <div class="col-md-6 mb-3">
                              <label for="nama_sekolah" class="form-label">Nama Sekolah</label>
                              <input
                                type="text"
                                class="form-control"
                                id="nama_sekolah"
                                name="nama_sekolah"
                                placeholder="Contoh: SDN 1 Sukabumi"
                                required
                              />
                            </div>
                            <div class="col-md-6 mb-3">
                              <label for="npsn" class="form-label">NPSN</label>
                              <input
                                type="text"
                                class="form-control"
                                id="npsn"
                                name="id_sekolah"
                                placeholder="Nomor Pokok Sekolah Nasional"
                                required
                              />
                            </div>
                          </div>
            
                          <!-- ðŸ”½ dropdown id_sppg (foreign key ke satuan_gizi) -->
                          <div class="col-md-12 mb-3">
                            <label for="id_sppg" class="form-label">ID Satuan Pelayanan Pemenuhan Gizi</label>
                            <select
                              class="form-select"
                              id="id_sppg"
                              name="id_sppg"
                              required
                            >
                              <option value="" disabled selected>Pilih Satuan Pelayanan Pemenuhan Gizi</option>
                              <% sppgList.forEach(sppg => { %>
                                <option value="<%= sppg.id_sppg %>">
                                  <%= sppg.id_sppg %> - <%= sppg.nama_sppg %>
                                </option>
                              <% }) %>
                            </select>
                          </div>
            
                          <div class="row">
                            <div class="col-md-6 mb-3">
                              <label for="kota" class="form-label">Kota / Kabupaten</label>
                              <input
                                type="text"
                                class="form-control"
                                id="kota"
                                name="kota"
                                placeholder="Contoh: Sukabumi"
                                required
                              />
                            </div>
                            <div class="col-md-6 mb-3">
                              <label for="provinsi" class="form-label">Provinsi</label>
                              <input
                                type="text"
                                class="form-control"
                                id="provinsi"
                                name="provinsi"
                                placeholder="Contoh: Jawa Barat"
                                required
                              />
                            </div>
                          </div>
            
                          <div class="mb-3">
                            <label for="alamat" class="form-label">Alamat Lengkap</label>
                            <textarea
                              class="form-control"
                              id="alamat"
                              name="alamat"
                              rows="3"
                              placeholder="Tuliskan alamat lengkap sekolah..."
                              required
                            ></textarea>
                          </div>
            
                          <div class="row">
                            <div class="col-md-6 mb-3">
                              <label for="jumlah_siswa" class="form-label">Jumlah Siswa</label>
                              <input
                                class="form-control"
                                id="jumlah_siswa"
                                name="jumlah_siswa"
                                placeholder="contoh: 350"
                              />
                            </div>
                            <div class="col-md-6 mb-3">
                              <label for="telepon" class="form-label">Telepon Sekolah</label>
                              <input
                                type="text"
                                class="form-control"
                                id="telepon"
                                name="telpon_sekolah"
                                placeholder="contoh: 0266-123456"
                              />
                            </div>
                          </div>
            
                          <div class="mt-4">
                            <button type="submit" class="btn btn-success w-100">
                              <i class="fa fa-save me-2"></i> Simpan Data Sekolah
                            </button>
                          </div>
                        </div>
                      </div>
            
                      <div class="col-lg-5 ms-auto text-center mt-5 mt-lg-0">
                        <div class="upload-area">
                          <img
                            id="preview"
                            alt=" "
                            class="img-fluid rounded mb-3 d-none"
                            style="max-height: 200px; object-fit: cover; cursor: pointer;"
                          />
                          <label
                            for="foto-upload"
                            id="upload-label"
                            class="btn btn-outline-secondary"
                          >Upload Foto Disini</label>
                          <input type="file" id="foto-upload" name="foto" accept="image/*" hidden />
                        </div>
                      </div>
                    </div>
                  </form>
                </div>
              </div>
            </div>
            
            
 
        
        
      <footer class="sticky-bottom footer pt-3  ">
        <div class="container-fluid">
          <div class="row align-items-center justify-content-lg-between">
            <div class="col-lg-6 mb-lg-0 mb-4">
