                                    <form id="updateMenuForm" enctype="multipart/form-data"
                                        action="/user/sppg/menu/edit/<%= makanan.id_menu %>" method="POST">

                                        <div class="row">
                                            <!-- KIRI -->
                                            <div class="col-lg-7">
                                                <div class="row">
                                                    <div class="col-md-6 mb-3">
                                                        <label class="form-label">Nama Makanan</label>
                                                        <input type="text" class="form-control" name="nama_makanan"
