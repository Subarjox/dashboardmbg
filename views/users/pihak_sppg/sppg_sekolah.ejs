    <script>
        const sekolahTableBody = document.getElementById('sekolahTableBody');
        const paginationContainer = document.getElementById('paginationContainer');
        const searchInput = document.getElementById('searchInput');
        const filterProvinsi = document.getElementById('filterProvinsi');
        const filterKota = document.getElementById('filterKota');
        const filterStatus = document.getElementById('filterStatus');
        const emptyState = document.getElementById('emptyState');

        let currentPage = 1;

        async function fetchSekolah(page = 1) {
            const search = searchInput?.value.trim() || '';
            const provinsi = filterProvinsi?.value || '';
            const kota = filterKota?.value || '';
            const status = filterStatus?.value || '';

            const url = `/user/sppg/getallsekolah?page=${page}&search=${search}&provinsi=${provinsi}&kota=${kota}&status=${status}`;

            const res = await fetch(url);
            const data = await res.json();

            if (data.error) {
                console.error(data.error);
                return;
            }

            sekolahTableBody.innerHTML = '';

            // --- EMPTY STATE ---
            if (!data.data || !data.data.length) {
                emptyState?.classList.remove('d-none');
                paginationContainer.innerHTML = '';
                return;
            } else {
                emptyState?.classList.add('d-none');
            }

            // --- RENDER TABLE ---
            data.data.forEach(s => {
                const tr = document.createElement('tr');
                tr.innerHTML = `
        <td class="ps-3"><h6 class="mb-0 text-sm">${s.id_sekolah}</h6></td>
        <td><h6 class="mb-0 text-sm">${s.nama_sekolah}</h6></td>
        <td>
          <h6 class="mb-0 text-sm">${s.kota}</h6>
          <span class="text-xxs text-secondary">${s.provinsi}</span>
        </td>
        <td class="text-center">
          <h6 class="mb-0 text-sm">${s.satuan_gizi?.nama_sppg || '-'}</h6>
        </td>
<td class="text-center">
  <span class="badge ${s.status_sistem === 'aktif'
                        ? 'bg-success'
                        : s.status_sistem === 'nonaktif'
                            ? 'bg-danger'
                            : 'bg-warning'
                    }">
    ${s.status_sistem}
  </span>
</td>

<td class="text-center">
  <span class="badge ${s.kasus_keracunan === 'aman'
                        ? 'bg-success'
                        : s.kasus_keracunan === 'bahaya'
                            ? 'bg-danger'
                            : 'bg-warning'
                    }">
    ${s.kasus_keracunan}
  </span>
</td>
        <td class="text-center">
          <a class="btn btn-outline-info btn-sm px-3 mb-0" href="/user/sppg/sekolah/${s.id_sekolah}">
            <svg xmlns="http://www.w3.org/2000/svg" height="18px" viewBox="0 -960 960 960" width="18px" fill="currentColor">
              <path d="M480-320q75 0 127.5-52.5T660-500q0-75-52.5-127.5T480-680q-75 0-127.5 52.5T300-500q0 75 52.5 127.5T480-320Zm0-72q-45 0-76.5-31.5T372-500q0-45 31.5-76.5T480-608q45 0 76.5 31.5T588-500q0 45-31.5 76.5T480-392Zm0 192q-146 0-266-81.5T40-500q54-137 174-218.5T480-800q146 0 266 81.5T920-500q-54 137-174 218.5T480-200Z"/>
            </svg>
          </a>
        </td>
      `;
                sekolahTableBody.appendChild(tr);
            });

            // --- PAGINATION ---
            paginationContainer.innerHTML = '';
            const totalPages = data.totalPages || 1;

            for (let i = 1; i <= totalPages; i++) {
                const btn = document.createElement('button');
                btn.textContent = i;
                btn.className = `btn btn-sm mx-1 ${i === page ? 'btn-info' : 'btn-outline-info'}`;
                btn.onclick = () => {
                    currentPage = i;
                    fetchSekolah(i);
                };
                paginationContainer.appendChild(btn);
            }
        }

        // --- EVENTS ---
        searchInput?.addEventListener('input', () => {
            currentPage = 1;
            fetchSekolah();
        });

        filterProvinsi?.addEventListener('change', () => {
            currentPage = 1;
            fetchSekolah();
        });

        filterKota?.addEventListener('change', () => {
            currentPage = 1;
            fetchSekolah();
        });

        filterStatus?.addEventListener('change', () => {
            currentPage = 1;
            fetchSekolah();
        });

        // --- INIT ---
        document.addEventListener('DOMContentLoaded', () => {
            fetchSekolah();
        });
    </script>


