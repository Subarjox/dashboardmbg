    <script>
        function confirmupdate(id_makanan) {
            Swal.fire({
                title: 'Yakin ingin mengubah?',
                text: 'Data menu makanan akan diubah!',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'Ya, Ganti data',
                cancelButtonText: 'Batal'
            }).then((result) => {
                if (result.isConfirmed) {
                    document.getElementById('updateMenuForm').submit();
                }
            });
        }
    </script>

    <script>
        const fileInput = document.getElementById('foto-upload');
        const preview = document.getElementById('preview');

        // Jika preview kosong, beri style placeholder
        if (!preview.src || preview.src.trim() === '') {
            preview.style.background = '#f0f0f0';
            preview.style.display = 'flex';
            preview.style.justifyContent = 'center';
            preview.style.alignItems = 'center';
            preview.innerText = 'Klik untuk upload foto';
        }

        // Klik preview untuk pilih/ganti foto
        preview.addEventListener('click', () => fileInput.click());

        // Event ketika file baru dipilih
        fileInput.addEventListener('change', function (event) {
            const file = event.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function (e) {
                    preview.src = e.target.result;
                    preview.style.background = 'none';
                    preview.innerText = '';
                };
                reader.readAsDataURL(file);
            }
        });
    </script>




