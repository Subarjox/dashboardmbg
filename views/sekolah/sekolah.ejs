                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Nama Sekolah</th>
                <th class="text-uppercase text-secondary text-xxs font-weight-bolder opacity-7 ps-2">Lokasi</th>
                <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Jumlah Siswa</th>
                <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Status Sistem</th>
                <th class="text-center text-uppercase text-secondary text-xxs font-weight-bolder opacity-7">Aksi</th>
              </tr>
            </thead>
            <tbody>
              <% if (sekolah && sekolah.length) { 
                  sekolah.forEach(s => { %>
                    <tr>
                      <td class="ps-3"><h6 class="mb-0 text-sm"><%= s.id_sekolah %></h6></td>
                      <td><h6 class="mb-0 text-sm"><%= s.nama_sekolah %></h6></td>
                      <td>
                        <h6 class="mb-0 text-sm"><%= s.kota %></h6>
                        <span class="text-xxs text-secondary"><%= s.provinsi %></span>
                      </td>
                      <td class="text-center"><h6 class="mb-0 text-sm"><%= s.jumlah_siswa %></h6></td>
                      <td class="text-center">
                        <span class="badge <%= s.status_sistem === 'aktif' ? 'bg-success' : 'bg-danger' %>"><%= s.status_sistem %></span>
                      </td>
                      <td class="text-center">
