<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="apple-touch-icon" sizes="76x76" href="../assets/img/apple-icon.png">
    <link rel="icon" type="image/png" href="../assets/img/favicon.png">
    <title>
        FoodGuard PRO -
    </title>
    <!--     Fonts and icons     -->
    <link href="https://fonts.googleapis.com/css?family=Inter:300,400,500,600,700,800" rel="stylesheet" />
    <!-- Nucleo Icons -->
    <link href="https://demos.creative-tim.com/soft-ui-dashboard/assets/css/nucleo-icons.css" rel="stylesheet" />
    <link href="https://demos.creative-tim.com/soft-ui-dashboard/assets/css/nucleo-svg.css" rel="stylesheet" />
    <!-- Font Awesome Icons -->
    <script src="https://kit.fontawesome.com/42d5adcbca.js" crossorigin="anonymous"></script>
    <script src="/vendor/sweetalert2/dist/sweetalert2.all.min.js"></script>
    <!-- CSS Files -->
    <link id="pagestyle" href="/assets/css/soft-ui-dashboard.css?v=1.1.0" rel="stylesheet" />
    <!-- Nepcha Analytics (nepcha.com) -->

</head>

<body class="g-sidenav-show  bg-gray-100">
    <aside class="sidenav navbar navbar-vertical navbar-expand-xs border-0 border-radius-xl my-3 fixed-start ms-3 "
        id="sidenav-main">
        <%- include('../partials/sidehead') %>
            <hr class="horizontal dark mt-0">
            <%- include('../partials/sidebar') %>
    </aside>
    <main class="main-content position-relative max-height-vh-100 h-100 border-radius-lg ">
        <!-- Navbar -->
        <%- include('../partials/navbar') %>
            <!-- End Navbar -->
            <div class="container-fluid py-4">
                <div class="row">

                    <div class="col-12 mb-lg-0 mb-4">
                        <div class="card">
                            <div class="card-body p-4">
                                <div class="row">
                                    <!-- Bagian Kiri -->
                                    <div class="col-lg-7">
                                        <div class="d-flex flex-column h-100">

                                            <div class="row">
                                                <div class="col-md-6 mb-3">
                                                    <label for="nama_sekolah" class="form-label">Nama Sekolah</label>
                                                    <input type="text" class="form-control" id="nama_sekolah"
                                                        value="<%= peringatan.nama_sekolah %>" readonly>
                                                </div>
                                                <div class="col-md-6 mb-3">
                                                    <label for="npsn" class="form-label">NPSN</label>
                                                    <input type="text" class="form-control" id="npsn"
                                                        value="<%= peringatan.id_sekolah %>" readonly>
                                                </div>
                                            </div>

                                            <div class="col-md-12 mb-3">
                                                <label for="sppg" class="form-label">Satuan Pelayanan Pemenuhan
                                                    Gizi</label>
                                                <input type="text" class="form-control" id="sppg"
                                                    value="<%= peringatan.satuan_gizi.nama_sppg %>" readonly>
                                            </div>

                                            <div class="row">
                                                <div class="col-md-6 mb-3">
                                                    <label for="kota" class="form-label">Kota / Kabupaten</label>
                                                    <input type="text" class="form-control" id="kota"
                                                        value="<%= peringatan.kota %>" readonly>
                                                </div>
                                                <div class="col-md-6 mb-3">
                                                    <label for="provinsi" class="form-label">Provinsi</label>
                                                    <input type="text" class="form-control" id="provinsi"
                                                        value="<%= peringatan.provinsi %>" readonly>
                                                </div>
                                            </div>

                                            <div class="col-md-12 mb-3">
                                                <label for="email_sekolah" class="form-label">Email Sekolah</label>
                                                <input type="email" class="form-control" id="email_sekolah"
                                                    value="<%= peringatan.email_sekolah %>" readonly />
                                            </div>

                                            <div class="mb-3">
                                                <label for="alamat" class="form-label">Alamat Lengkap</label>
                                                <textarea class="form-control" id="alamat" rows="3"
                                                    readonly><%= peringatan.alamat %></textarea>
                                            </div>

                                        </div>
                                    </div>

                                    <!-- Bagian Kanan: Foto -->
                                    <div class="col-lg-5 ms-auto text-center mt-5 mt-lg-0">
                                        <div class="upload-area">
                                            <% if (peringatan.foto_sekolah) { %>
                                                <img src="<%= peringatan.foto_sekolah %>" alt="Foto Sekolah"
                                                    class="img-fluid rounded mb-3"
                                                    style="max-height: 200px; object-fit: cover;">
                                                <% } else { %>
                                                    <p class="text-muted">Tidak ada foto sekolah</p>
                                                    <% } %>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-12 mt-5">
                                    <div class="row g-3" style="min-height: 500px;">
                                        <% let cardColor; let description; let btncolor; let btndesc; if
                                            (peringatan.status_sistem==='nonaktif' ) { cardColor='bg-danger' ;
                                            description='Sistem sedang down, Segera Kirim Petugas' ;
                                            btncolor='btn-secondary' ; btndesc='Kirim tim teknisi' } else if
                                            (peringatan.status_sistem==='dispatched' ) { cardColor='bg-warning' ;
                                            description='Petugas sedang dikirim menuju lokasi, apabila sudah sampai tolong klik button'
                                            ; btncolor='btn-info' ; btndesc='Petugas sudah sampai' } else if
                                            (peringatan.status_sistem==='on_maintenance' ) { cardColor='bg-info' ;
                                            description='Sistem sedang dalam perbaikan, apabila sudah selesai tolong selesai'
                                            ; btncolor='btn-success' ; btndesc='Selesai Perbaikan' } else if
                                            (peringatan.status_sistem==='ready' ){ cardColor='bg-success' ;
                                            description='Sistem sudah siap digunakan, menunggu laporan pihak sekolah' ;
                                            btncolor='btn-secondary' ; btndesc='Menunggu Laporan Pihak Sekolah' }else if
                                            (peringatan.status_sistem==='aktif' ){ cardColor='bg-success' ;
                                            description='Sistem Sedang Berjalan Aktif' ; btncolor='btn-secondary' ;
                                            btndesc='Tidak ada aksi yang perlu diambil' } %>

                                            <!-- Status Sistem -->
                                            <div class="col-lg-6 col-md-6 col-12">
                                                <form form id="sistemDownForm" enctype="multipart/form-data"
                                                    action="/masalah/sendteam/<%= peringatan.id_sekolah %>"
                                                    method="POST" class="h-100">
                                                    <div class="card h-100">
                                                        <span
                                                            class="mask <%= cardColor %> opacity-10 border-radius-lg"></span>
                                                        <div class="card-body p-3 position-relative ">
                                                            <div
                                                                class="d-flex flex-column align-items-center h-100 w-100">
                                                                <div class="icon icon-shape bg-white shadow text-center border-radius-2xl d-flex align-items-center justify-content-center w-100"
                                                                    style="width:60px; height:60px;">
                                                                    <svg xmlns="http://www.w3.org/2000/svg"
                                                                        height="24px" viewBox="0 -960 960 960"
                                                                        width="24px" fill="CurrentColor">
                                                                        <path
                                                                            d="M96-192v-92q0-25.78 12.5-47.39T143-366q54-32 114.5-49T384-432q66 0 126.5 17T625-366q22 13 34.5 34.61T672-284v92H96Zm648 0v-92q0-42-19.5-78T672-421q39 8 75.5 21.5T817-366q22 13 34.5 34.67Q864-309.65 864-284v92H744ZM384-480q-60 0-102-42t-42-102q0-60 42-102t102-42q60 0 102 42t42 102q0 60-42 102t-102 42Zm336-144q0 60-42 102t-102 42q-8 0-15-.5t-15-2.5q25-29 39.5-64.5T600-624q0-41-14.5-76.5T546-765q8-2 15-2.5t15-.5q60 0 102 42t42 102ZM168-264h432v-20q0-6.47-3.03-11.76-3.02-5.3-7.97-8.24-47-27-99-41.5T384-360q-54 0-106 14t-99 42q-4.95 2.83-7.98 7.91-3.02 5.09-3.02 12V-264Zm216.21-288Q414-552 435-573.21t21-51Q456-654 434.79-675t-51-21Q354-696 333-674.79t-21 51Q312-594 333.21-573t51 21ZM384-264Zm0-360Z" />
                                                                    </svg>
                                                                </div>
                                                                <div
                                                                    class="d-flex flex-column justify-content-center align-items-center flex-grow-1 text-center w-100">
                                                                    <h5
                                                                        class="text-white text-uppercase font-weight-bolder mb-0 mt-2">
                                                                        Status Sistem
                                                                    </h5>
                                                                    <h1
                                                                        class="text-white text-uppercase font-weight-bolder mb-0 mt-1">
                                                                        <%= peringatan.status_sistem%>
                                                                    </h1>
                                                                    <span class="text-white font-weight-bold mt-2">
                                                                        <%= description %>
                                                                    </span>
                                                                </div>
                                                                <% if (peringatan.status_sistem==='nonaktif' ||
                                                                    peringatan.status_sistem==='dispatched' ||
                                                                    peringatan.status_sistem==='on_maintenance' ) { %>
                                                                    <button type="button" id="submitSistemBtn"
                                                                        class="btn <%= btncolor %> mt-3 w-100 justify-content-end">
                                                                        <%= btndesc %>
                                                                    </button>
                                                                    <% } %>
                                                            </div>
                                                </form>
                                            </div>
                                    </div>
                                </div>

                                <script>
                                    document.getElementById('submitSistemBtn')?.addEventListener('click', function () {
                                        Swal.fire({
                                            title: 'Yakin?',
                                            text: 'Apakah anda yakin ingin melanjutkan?',
                                            icon: 'warning',
                                            showCancelButton: true,
                                            confirmButtonText: 'Ya, lanjutkan',
                                            cancelButtonText: 'Batal'
                                        }).then((result) => {
                                            if (result.isConfirmed) {
                                                document.getElementById('sistemDownForm').submit();
                                            }
                                        });
                                    });
                                </script>

                                <!-- Keracunan-->
                                <% let cardColor2; let description2; let btncolor2; let btndesc2; if
                                    (peringatan.kasus_keracunan==='bahaya' ) { cardColor2='bg-danger' ;
                                    description2='Keracunan Telah Terjadi, Segera Hubungi SPPG untuk mengirim petugas medis'
                                    ; btncolor2='btn-secondary' ;
                                    btndesc2=' ðŸ”” Beri Notifikasi Ulang ke SPPG Terkait ðŸ””' } else if
                                    (peringatan.kasus_keracunan==='dispatched' ) { cardColor2='bg-warning' ;
                                    description2='Tim medis sedang dalam perjalanan ke lokasi masalah, apabila sudah sampai tolong klik button '
                                    ; btncolor2='btn-info' ; btndesc2='Petugas Telah Sampai' } else if
                                    (peringatan.kasus_keracunan==='on_treatment' ) { cardColor2='bg-info' ;
                                    description2='Masalah keracunan sedang ditangani' ; btncolor2='btn-secondary' ;
                                    btndesc2='Petugas medis sedang mengobati siswa' } else if
                                    (peringatan.kasus_keracunan==='resolved' ) { cardColor2='bg-info' ;
                                    description2='Masalah keracunan sudah selesai,menunggu laporan pihak sekolah' ;
                                    btncolor2='btn-success' ; btndesc2='Menunggu Laporan Pihak Sekolah' }else if
                                    (peringatan.kasus_keracunan==='aman' ){ cardColor2='bg-success' ;
                                    description2='Tidak ada masalah keracunan' ; btncolor2='btn-secondary' ;
                                    btndesc2='Tidak ada aksi yang perlu diambil' } %>

                                    <div class="col-lg-6 col-md-6 col-12">
                                        <form id="keracunanForm" enctype="multipart/form-data"
                                            action="/masalah/notify/<%= peringatan.id_sekolah %>" method="POST"
                                            class="h-100">
                                            <div class="card h-100">
                                                <span class="mask <%= cardColor2 %> opacity-10 border-radius-lg"></span>
                                                <div class="card-body p-3 position-relative ">
                                                    <div class="d-flex flex-column align-items-center h-100 w-100">
                                                        <div class="icon icon-shape bg-white shadow text-center border-radius-2xl d-flex align-items-center justify-content-center w-100"
                                                            style="width:60px; height:60px;">
                                                            <svg xmlns="http://www.w3.org/2000/svg" height="24px"
                                                                viewBox="0 -960 960 960" width="24px"
                                                                fill="CurrentColor">
                                                                <path
                                                                    d="M599.21-96Q584-96 573.5-106.35T563-132l1-38q-25-4-47.5-13T474-206l-37.69 39.22Q425-156 410.5-156q-14.5 0-25.5-11t-11-25.67q0-14.66 11-25.33l39-39q-4-5-6.67-10.84-2.66-5.85-5.33-11.16l-28-55-48 48q-11 11-25.5 11T285-285.93q-11-10.93-11-25.5T285-337l48-48-54-26q-3.85-1.71-6.92-3.86Q269-417 266-419l-40 40q-11 11-25.5 11T175-378.93q-11-10.93-11-25.5T175-430l37-37q-17.16-21.45-27.58-45.73Q174-537 170.44-564h-38.3q-15.14 0-25.64-10.29T96-599.79q0-15.21 10.42-25.71t25.82-10.5H173q5.17-19.28 12.4-36.52 7.23-17.25 18.6-33.48l-37-37q-11-10.64-11-24.82T167-793q11-11 25.18-11T217-793l38 36q16-11 33-18t36-12v-40.76q0-15.4 10.29-25.82t25.5-10.42q15.21 0 25.71 10.25 10.5 10.26 10.5 25.41V-790q26.15 4.18 49.57 13.59Q469-767 489-752l32.77-32.77Q533-796 547.67-796q14.66 0 25.33 11 11 10.91 11 25.45 0 14.55-11.27 25.82L538-699q3 5 5.58 9.13 2.58 4.12 4.64 9.28L574-629l45-45q10.67-11 25.33-11Q659-685 670-674q11 11 11 25.67 0 14.66-11 25.33l-46 46 57 28q7 3 13 6.5t12 8.5l36.92-36.92Q754-582 768.18-582q14.18 0 24.82 11 11 10.67 11 25.33 0 14.67-10.85 25.96L757-483q14 20 22 42t11.5 45h37.63Q843-396 853-385.71q10 10.29 10 25.5t-10.28 25.71Q842.44-324 827.24-324H787q-5 19-12.5 36.5T756-254l37 37q11 10.67 11 25.33 0 14.67-11 26.15Q782-155 767.5-155T742-166l-37-37q-16 11-33 18t-36 12l-1 41q0 15.3-10.29 25.65Q614.42-96 599.21-96Zm-7.09-144Q652-240 690-285.5q38-45.5 28.36-104.82Q713-421 695.22-445.39 677.44-469.77 649-484l-65-33q-21.85-11.02-39.42-28.01Q527-562 516-584l-32-65q-17-33-47.97-52-30.98-19-68.15-19Q308-720 270-675q-38 45-28.36 104.32Q247-540 265.06-515.23 283.11-490.45 312-476l63.78 31.78Q398-433 415.37-415.42 432.73-397.85 444-376l32 65q17 33 47.97 52 30.98 19 68.15 19ZM372-528q25 0 42.5-17.5T432-588q0-25-17.5-42.5T372-648q-25 0-42.5 17.5T312-588q0 25 17.5 42.5T372-528Zm203.89 216Q596-312 610-325.89q14-13.88 14-34Q624-380 610.11-394q-13.88-14-34-14Q556-408 542-394.11q-14 13.88-14 34Q528-340 541.89-326q13.88 14 34 14ZM480-480Z" />
                                                            </svg>
                                                        </div>
                                                        <div
                                                            class="d-flex flex-column justify-content-center align-items-center flex-grow-1 text-center w-100">
                                                            <h5
                                                                class="text-white text-uppercase font-weight-bold mb-0 mt-2">
                                                                Kasus Keracunan
                                                            </h5>
                                                            <h1
                                                                class="text-white text-uppercase font-weight-bolder mb-0 mt-1">
                                                                <%= peringatan.kasus_keracunan%>
                                                            </h1>
                                                            <span class="text-white font-weight-bold mt-2">
                                                                <%= description2 %>
                                                            </span>
                                                        </div>

                                                        <% if (peringatan.kasus_keracunan==='bahaya' ) { %>
                                                            <button
                                                                class="btn <%= btncolor2 %> mt-3 w-100 justify-content-end"
                                                                type="button" id="submitKeracunanBtn">
                                                                <%= btndesc2 %>
                                                            </button>
                                                            <% } %>
                                                    </div>
                                        </form>
                                    </div>
                            </div>
                        </div>

                        <% if (flash) { %>
                            <script>
                                Swal.fire({
                                    icon: '<%= flash.type %>',
                                    title: 'INFO',
                                    text: '<%= flash.message %>',
                                    timer: 2000,
                                    showConfirmButton: false
                                })
                            </script>
                            <% } %>

                                <script>
                                    document.getElementById('submitKeracunanBtn')?.addEventListener('click', function () {
                                        Swal.fire({
                                            title: 'Yakin?',
                                            text: 'Apakah anda yakin ingin melanjutkan?',
                                            icon: 'warning',
                                            showCancelButton: true,
                                            confirmButtonText: 'Ya, lanjutkan',
                                            cancelButtonText: 'Batal'
                                        }).then((result) => {
                                            if (result.isConfirmed) {
                                                document.getElementById('keracunanForm').submit();
                                            }
                                        });
                                    });
                                </script>

    </main>
    <!--   Core JS Files   -->
    <script src="../assets/js/core/popper.min.js"></script>
    <script src="../assets/js/core/bootstrap.min.js"></script>
    <script src="../assets/js/plugins/perfect-scrollbar.min.js"></script>
    <script src="../assets/js/plugins/smooth-scrollbar.min.js"></script>
    <script src="../assets/js/plugins/chartjs.min.js"></script>
    <script>
        var win = navigator.platform.indexOf('Win') > -1;
        if (win && document.querySelector('#sidenav-scrollbar')) {
            var options = {
                damping: '0.5'
            }
            Scrollbar.init(document.querySelector('#sidenav-scrollbar'), options);
        }
    </script>
    <script async defer src="https://buttons.github.io/buttons.js"></script>
    <script src="../assets/js/soft-ui-dashboard.min.js?v=1.1.0"></script>
</body>

</html>